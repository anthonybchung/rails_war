<h1 class="text-text text-3xl">Log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: "mt-4"}) do |f| %>
  <div class="field w-full relative my-4">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-tertiary w-full rounded border-text focus:border-secondary  focus:border-2 focus:ring-0", placeholder: "Enter Email"%>
    <%= f.label :email, class: "absolute left-3 -top-3 bg-tertiary px-2 text-text" %>
  </div>

  <div class="field w-full relative my-4">
    <%= f.password_field :password, autocomplete: "current-password", class: "bg-tertiary w-full rounded border-text focus:border-secondary  focus:border-2 focus:ring-0", placeholder: "Enter Password" %>
    <%= f.label :password,class: "absolute left-3 -top-3 bg-tertiary px-2 text-text" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field w-full flex flex-row justify-end items-center">
      <%= f.check_box :remember_me, class: 'mx-1 focus:border-secondary focus:ring-0 cursor-pointer' %>
      <%= f.label :remember_me, class: 'cursor-pointer'%>
    </div>
  <% end %>

  <div class="actions w-full flex flex-row justify-end items-center mt-4">
    <%= f.submit "Log in", class:"bg-primary px-4 py-1 rounded text-text mx-2 cursor-pointer" %>
    <%= link_to "Cancel", root_path, class:"bg-primary px-4 py-1 rounded text-text ml-2 mr-0" %>
  </div>
<% end %>

<div class="text-right mt-4">
  <%= render "devise/shared/links" %>
</div>